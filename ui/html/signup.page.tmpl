{{template "base" .}}

{{define "title"}}Signup{{end}}

{{define "body"}}
<div class="container py-3">
    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <form action="/user/signup" method="POST">
                {{with .Form}}
                    <div class="form-group todo-form-space">
                        <label>Name</label>
                        <input type="text" value='{{.Get "name"}}' class="form-control" placeholder="Enter name">
                        {{with .Errors.Get "name"}}
                            <label class='error text-danger'>{{.}}</label>
                        {{end}} 
                    </div>
                    <div class="form-group todo-form-space">
                        <label>Email address</label>
                        <input type="text" value='{{.Get "email"}}' class="form-control" placeholder="Enter email">
                        {{with .Errors.Get "email"}}
                            <label class='error text-danger'>{{.}}</label>
                        {{end}} 
                    </div>
                    <div class="form-group todo-form-space">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="Password">
                        {{with .Errors.Get "password"}}
                            <label class='error text-danger'>{{.}}</label>
                        {{end}} 
                    </div>
                    <button type="submit" value="Signup" class="btn btn-primary todo-form-space">Sign-Up</button>
                {{end}}
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
{{end}}